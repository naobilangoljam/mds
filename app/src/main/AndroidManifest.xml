<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kangleiit.manipuridictionary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ManipuriDictionary"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.searchscreen.ResultActivity" />
        <activity android:name=".ui.WordMeaningsActivity" />
        <activity android:name=".ui.addEditWord.AddEditActivity" android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.mainscreen.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.account.AccountActivity"></activity>
    </application>

</manifest>